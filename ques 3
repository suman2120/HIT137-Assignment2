import turtle

# Recursive function to modify one edge according to the rules
def draw_edge(t, length, depth):  # t means turtle pen
    if depth == 0:
        t.forward(length)  # if no recursion left, draw a straight line
       
    else:
        segment_length = length/3  # Divide the line into 3 equal parts
       
        draw_edge(t, segment_length, depth-1)   # draw first segment
       
        t.left(60)  # turn left 60 degree to start triangle indentation
        draw_edge(t, segment_length, depth-1)  # draw second segment
       
        t.right(120)  # turn right 120 to makes the triangle point inward
        draw_edge(t,segment_length, depth-1)
       
        t.left(60)  # turn left 60 degree to realign with original direction
        draw_edge(t, segment_length, depth-1)
       
# Function to draw a polygon using modified edges
def draw_polygon(t, sides, side_length, depth):
    angle = 360/sides  # Calculate turning angle for polygon
    for i in range(sides):
        draw_edge(t, side_length, depth)
        t.right(angle)
       
# Main Program
def main():
    numberOfSides = int(input("Enter the number of sides: "))
    side_length = int(input("Enter the side length: "))
    recursion_depth = int(input("Enter the recursion depth: "))
   
    screen = turtle.Screen() #create turtle screen
    screen.bgcolor('white')
   
    t = turtle.Turtle()
    t.speed(0)
    4
    draw_polygon(t, numberOfSides, side_length, recursion_depth)
    t.hideturtle() # hide the turtle arrow after drawing
    turtle.done()
main()
